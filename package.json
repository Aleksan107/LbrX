{
	"name": "lbrx",
	"version": "0.1.8-alpha",
	"description": "State Manager for JS Apps",
	"author": "Leon Bernstein",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/staffoffrost/lbrx"
	},
	"bugs": {
		"url": "https://github.com/staffoffrost/lbrx/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"types": "lib",
	"main": "lib/index.js",
	"scripts": {
		"start": "webpack --watch -d --progress",
		"build": "webpack -p --progress",
		"build:lib": "rimraf lib/* && tsc -p ./src/tsconfig.json && node build.lib.js",
		"build:lib:test": "rimraf lib/* && tsc -p ./src/tsconfig.json && rimraf lib/*",
		"publish": "cd lib && npm publish",
		"lint": "tslint --project tsconfig.json --config tslint.json --exclude **/*.d.ts --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:watchAll": "jest --watchAll"
	},
	"dependencies": {
		"rxjs": "^6.5.4"
	},
	"devDependencies": {
		"@types/jest": "^25.1.3",
		"jest": "^25.1.0",
		"jest-html-reporter": "^2.8.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^25.2.1",
		"ts-loader": "^6.2.1",
		"tslint": "^6.1.0",
		"typescript": "^3.8.3",
		"webpack": "^4.42.0",
		"webpack-cli": "^3.3.11"
	},
	"jest": {
		"preset": "ts-jest"
	},
	"private": false
}
