{
  "name": "lbrx",
  "version": "0.3.7-alpha",
  "description": "State Manager for JS Apps",
  "author": "Leon Bernstein",
  "license": "MIT",
  "homepage": "https://github.com/LbJS/LbrX#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LbJS/LbrX.git"
  },
  "bugs": {
    "url": "https://github.com/LbJS/LbrX/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "src/index.ts",
  "sideEffects": false,
  "scripts": {
    "start": "npm run pg:start",
    "pg:start": "webpack -d --progress --config playground/webpack.config.js --watch",
    "pg:build": "webpack -p --progress --config playground/webpack.config.js && ts-node -s tools/log-success.ts \"Playground build\"",
    "test": "jest && ts-node -s tools/log-success.ts \"Testing\"",
    "test:watch": "jest --watch",
    "test:watchAll": "jest --watchAll",
    "lint": "tslint --project tsconfig.json --config tslint.json --exclude **/*.d.ts --fix && ts-node -s tools/log-success.ts \"Linting\"",
    "_src:build-script": "ts-node -s tools/run.ts --src-build",
    "_src:post-build-script": "ts-node -s tools/run.ts --post-src-build",
    "src:test-build": "run-s -s _src:build-script _src:post-build-script",
    "src:build": "run-s -s _src:build-script \"_src:post-build-script -- --increment-version\"",
    "src:publish": "cd build && npm publish && cd .. && ts-node -s tools/log-success.ts \"Publish\"",
    "src:CI-CD": "run-s -s lint test pg:build src:build && npm run src:publish && run-s -s git:* && ts-node -s tools/log-success.ts \"CI-CD\"",
    "git:stage+commit-ver-up": "git add . && git commit -S -m \"ver up\"",
    "git:tag+push+push-tag": "git tag 0.3.7-alpha && git push && git push --tags"
  },
  "dependencies": {
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/node-fetch": "^2.5.7",
    "copy-webpack-plugin": "^6.0.2",
    "fs-extra": "^9.0.1",
    "html-minifier": "^4.0.0",
    "jest": "^26.0.1",
    "jest-cli": "^26.0.1",
    "jest-html-reporter": "^3.1.3",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "path-extra": "^4.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.15.0",
    "rollup-plugin-terser": "^6.1.0",
    "terser-webpack-plugin": "^3.0.3",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "private": false
}
