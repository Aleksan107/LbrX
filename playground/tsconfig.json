{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "lbrx": [
        "../src",
        "../src/*"
      ],
      "lbrx/core": [
        "../src/core",
        "../src/core/*"
      ],
      "lbrx/dev-tools": [
        "../src/dev-tools",
        "../src/dev-tools/*"
      ],
      "lbrx/utils": [
        "../src/utils",
        "../src/utils/*"
      ],
    }
  },
  "include": [
    "../src/**/*.ts",
    "./ts/**/*.ts"
  ]
}
