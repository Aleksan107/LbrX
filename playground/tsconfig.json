{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "lbrx": [
        "../src/index.ts"
      ],
      "lbrx/core": [
        "../src/core/index.ts"
      ],
      "lbrx/dev-tools": [
        "../src/dev-tools/index.ts"
      ],
      "lbrx/utils": [
        "../src/utils/index.ts"
      ],
      "lbrx/query": [
        "../src/query/index.ts"
      ],
      "environment": [
        "./src/environment/dev.ts",
        "./src/environment/prod.ts",
      ],
    },
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "../src/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
