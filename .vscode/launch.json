{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch JS",
      "request": "launch",
      "type": "node",
      "program": "${file}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch TS",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${file}"
      ],
      "env": {
        "TS_NODE_PROJECT": "${workspaceRoot}/tools/tsconfig.json"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "name": "Attach to 127.0.0.1",
      "request": "attach",
      "type": "pwa-chrome",
      "url": "127.0.0.1:5501*",
      "port": 9222,
      "sourceMaps": true,
      "disableNetworkCache": false,
      "smartStep": true,
      "skipFiles": [
        "*.js"
      ],
      "webRoot": "${workspaceFolder}",
    },
    {
      "name": "Launch Jest",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--nolazy",
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--no-cache",
        "--watch",
        "--runInBand",
        "--config",
        "${workspaceRoot}/jest.config.js",
        "/${fileBasename}"
      ],
      "windows": {
        "runtimeArgs": [
          "--nolazy",
          "--inspect-brk",
          "${workspaceRoot}/node_modules/jest/bin/jest.js",
          "--no-cache",
          "--watch",
          "--runInBand",
          "--config",
          "${workspaceRoot}/jest.config.js",
          "/${fileBasename}"
        ],
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    },
  ]
}
