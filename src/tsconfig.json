{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "../lib",
    "baseUrl": ".",
    "paths": {
      "lbrx": [
        "./index"
      ],
      "lbrx/mode": [
        "./mode"
      ],
      "lbrx/helpers": [
        "./helpers",
        "./helpers/*"
      ],
      "lbrx/types": [
        "./types",
      ],
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "**/*.ts"
  ]
}
